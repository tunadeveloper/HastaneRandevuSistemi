@model IEnumerable<HastaneRandevuSistemi.Models.Randevu>

@{
    ViewData["Title"] = "Randevu ve Hasta Listesi";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<h1 class="text-center mb-4">Randevular</h1>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Randevu Tarihi</th>
                <th>Randevu Saati</th>
                <th>Randevu Sebebi</th>
                <th>Hasta Adı</th>
                <th>Hasta Soyadı</th>
                <th>Hasta TC Kimlik No</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var randevu in Model)
            {
                <tr>
                    <td>@randevu.RandevuTarihi.ToString("yyyy-MM-dd")</td>
                    <td>@randevu.RandevuSaati</td> 
                    <td>@randevu.RandevuSebebi</td>
                    <td>@randevu.Hasta.Ad</td>
                    <td>@randevu.Hasta.Soyad</td>
                    <td>@randevu.Hasta.TCKimlikNo</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
